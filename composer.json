{
    "name": "lucianotonet/laravel-telescope-mcp",
    "description": "MCP Server extension for Laravel Telescope",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Tonet",
            "email": "tonetlds@gmail.com",
            "homepage": "https://github.com/lucianotonet",
            "role": "Developer"
        }
    ],
    "keywords": [
        "laravel",
        "telescope",
        "mcp",
        "developer-tools",
        "debugging",
        "monitoring",
        "cursor"
    ],
    "support": {
        "issues": "https://github.com/lucianotonet/laravel-telescope-mcp/issues",
        "source": "https://github.com/lucianotonet/laravel-telescope-mcp"
    },
    "require": {
        "php": "^8.3",
        "laravel/framework": "^11.0|^12.0",
        "laravel/mcp": "^0.5.3",
        "laravel/telescope": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "LucianoTonet\\TelescopeMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LucianoTonet\\TelescopeMcp\\TelescopeMcpServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
