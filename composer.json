{
    "name": "lucianotonet/laravel-telescope-mcp",
    "description": "Laravel Boost plugin providing AI-powered debugging tools via Laravel Telescope's structured telemetry data",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Tonet",
            "email": "tonetlds@gmail.com",
            "homepage": "https://github.com/lucianotonet",
            "role": "Developer"
        }
    ],
    "keywords": [
        "laravel",
        "telescope",
        "boost",
        "laravel-boost",
        "ai",
        "ai-assisted-development",
        "developer-tools",
        "debugging",
        "monitoring"
    ],
    "support": {
        "issues": "https://github.com/lucianotonet/laravel-telescope-mcp/issues",
        "source": "https://github.com/lucianotonet/laravel-telescope-mcp"
    },
    "require": {
        "php": "^8.2",
        "laravel/boost": "^2.0",
        "laravel/framework": "^11.0|^12.0",
        "laravel/telescope": "^5.0|^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0"
    },
    "autoload": {
        "psr-4": {
            "LucianoTonet\\TelescopeMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LucianoTonet\\TelescopeMcp\\TelescopeMcpServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
